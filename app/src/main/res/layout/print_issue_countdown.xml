<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="24dp"

    android:fitsSystemWindows="true"

    android:background="@color/cardview_dark_background"
    android:elevation="@dimen/standard_elevation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"


        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/h4"
        android:text="PRINT ISSUE"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/h5"
        android:text="RELEASES IN"
        />
    
    <LinearLayout
        android:id="@+id/countdown_view"

        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="86dp">

        <TextView
            android:id="@+id/print_issue_countdown_hours"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h4"
            android:text="00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h4"
            android:text="H "
            />
        <TextView
            android:id="@+id/print_issue_countdown_mins"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h4"
            android:text="00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h4"
            android:text="M "
            />
        <TextView
            android:id="@+id/print_issue_countdown_secs"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h4"
            android:text="00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/h4"
            android:text="S "
            />

    </LinearLayout>

</LinearLayout>